{
  "expo": {
    "name": "veciApp",
    "slug": "veciApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Permitimos el acceso a tu galería para que puedas seleccionar imágenes para tu emprendimiento",
        "NSCameraUsageDescription": "Permitimos el acceso a tu cámara para que puedas tomar fotos para tu emprendimiento",
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrar tu dirección en el mapa",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrar tu dirección en el mapa",
      },
      "supportsTablet": true,
      "usesIcloudStorage": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.racarvallog.veciApp",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.VIBRATE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyC7UNb-61Xv8cAd_020VrzG7ccvXpTrJg4"
        }
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "dc4ef154-4467-4c4c-b3df-d293ee763768"
      }
    },
    "plugins": [
      "expo-location"
    ]
  }
}
